# ===== App =====
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120

# ===== JWT =====
# 반드시 32자 이상 (실제 제출용 .env에는 강한 값으로 변경!)
JWT_SECRET=CHANGE_ME__AT_LEAST_32_CHARS_LONG
JWT_ISSUER=blogtp
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=14

# ===== MySQL =====
DB_HOST=mysql
DB_PORT=3306
DB_NAME=db_name
DB_USERNAME=db_username
DB_PASSWORD=db_password
DB_URL=jdbc:mysql://mysql:3306/blogtp?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# ===== Redis =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== Google Social Login (tokeninfo 검증) =====
GOOGLE_CLIENT_ID=

# ===== Firebase Social Login =====
FIREBASE_ENABLED=false
# serviceAccountKey.json 내용을 base64로 인코딩해서 넣기 (예: base64 -w 0 serviceAccountKey.json)
FIREBASE_CREDENTIALS_BASE64=
